<%- include('../partials/header') %>

<h2><%= artist.firstName %> <%= artist.lastName %></h2>
<h3>@<%= artist.artistProf.username %></h3>
<p>Styles: <%= artist.artistProf.styles.join(', ') %></p>
<% if (!user?.following.includes(artist.artistProf.username)) { %>
    <form action="/artist-profs/<%= artist.artistProf.username %>/follow?_method=PUT" method="POST">
        <button type="submit">Follow</button>
    </form>
<% } else { %>
    <form action="/artist-profs/<%= artist.artistProf.username %>/follow?_method=PUT" method="POST">
        <button type="submit">Unfollow</button>
    </form>
<% } %>

<div class="my-container">
    <% posts.forEach(post => { %>
        <div class="box">
            <div class="card">
                <%- include('../partials/post', {post}) %>
            </div>
        </div>
    <% }); %>
</div>


<%- include('../partials/footer') %>